<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        x:Name="RootWindow"
        Loaded="MainWindow_Loaded"
        Title="MainWindow" Height="300" Width="300">
    <Grid Width="300" Height="300" Name="RootGrid" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="ActiveWindow" Content="ActiveWindow :" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="280" Grid.ColumnSpan="2"/>
        <Label x:Name="Settings" Content="Settings :" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="280" Grid.ColumnSpan="2"/>
        <Label x:Name="OutputPath" Content="OutputPaht :" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top" Width="280" Grid.ColumnSpan="2"/>
        <Label x:Name="ErrorLog" Content="Error :" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="280" Grid.ColumnSpan="2"/>

    </Grid>

</Window>
